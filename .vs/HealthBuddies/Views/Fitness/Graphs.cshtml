@{
    ViewBag.Title = "Graphs";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link href="https://fonts.googleapis.com/css?family=Itim" rel="stylesheet">
    <style>
        body {
            font-family: 'Itim', cursive;
        }
    </style>
</head>

<body class="bg-gray-100">

    <div class="bg-gradient-to-b from-blue-400 to-blue-600 p-8 rounded-xl shadow-lg w-3/4 mx-auto">
        <div class="rounded-lg p-6">

            <div class="flex justify-between items-center mb-6">
                <h1 class="font-bold text-5xl text-white">My Fitness Progress</h1>
            </div>

            <p class="text-center text-white mb-4">View your progress for all your fitness goals</p>

            <div class="flex justify-between mb-6">
                <div class="flex items-center space-x-2">
                    <div class="w-4 h-4 bg-green-500 rounded-full"></div>
                    <p class="text-white">My Steps Today</p>
                    <span class="bg-green-500 text-white px-2 py-1 rounded">10000 Steps</span>
                </div>
                <div class="flex items-center space-x-2">
                    <div class="w-4 h-4 bg-red-500 rounded-full"></div>
                    <p class="text-white">My Daily Goal</p>
                    <span class="bg-red-500 text-white px-2 py-1 rounded">@ViewBag.DailySteps Steps</span>
                </div>
            </div>

            <div class="bg-green-100 border border-green-300 p-6 rounded mb-4">
                <canvas id="lineChart" style="max-width: 600px; margin-top: 20px;"></canvas>
                <p class="text-center text-gray-500"></p>
            </div>

            <div class="flex justify-center items-center">
                <p class="text-white mr-4">View from:</p>
                <select class="bg-white border border-gray-300 rounded px-3 py-2">
                    <option>1 Month</option>
                    <!-- Add other options as needed -->
                </select>
            </div>

        </div>
    </div>

    <script>
    document.addEventListener('DOMContentLoaded', function () {
        const chartLabels = @Html.Raw(ViewBag.ChartLabels);
        const chartData = @Html.Raw(ViewBag.ChartData);
        const userGoal = @Html.Raw(ViewBag.DailySteps); // Add this line to get the user's goal

        const chartDataConfig = {
            labels: chartLabels,
            datasets: [{
                label: 'Step Data',
                data: chartData,
                pointBackgroundColor: 'rgba(54, 162, 235, 1)', // Specify point color
                borderColor: 'rgba(54, 162, 235, 1)',
                pointRadius: 5, // Adjust point size as needed
                borderWidth: 1
            }, {
                label: 'Step Goal',
                data: Array(chartLabels.length).fill(userGoal), // Repeat user's goal for all data points
                type: 'line',
                borderColor: 'rgba(255, 0, 0, 1)',
                borderWidth: 1,
                borderDash: [5, 5],
                fill: false
            }]
        };

        const chartOptions = {
            scales: {
                x: {
                    type: 'category', // Change to 'category' if time is represented as string labels
                    position: 'bottom'
                },
                y: {
                    beginAtZero: true
                }
            }
        };

        const lineChart = new Chart(document.getElementById('lineChart'), {
            type: 'line', // Use 'scatter' type for individual points
            data: chartDataConfig,
            options: chartOptions
        });
        lineChart.update();
    });
    </script>




</body>

</html>
